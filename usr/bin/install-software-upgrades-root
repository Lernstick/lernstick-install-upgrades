#!/bin/sh

# support for i18n and L10n
. gettext.sh
export TEXTDOMAIN=install-software-upgrades

# clean up aufs pseudo links
if [ -e /sbin/auplink ]
then
	echo "$(gettext "Cleaning up file system, please wait...")"
	/sbin/auplink / flush
fi

# install upgrades
apt-get upgrade -y

# empty the package cache
apt-get clean
